<main class="main">
  <div class="inner">
    <%= form_with model: @stock, url: user_stocks_path(@user.id), local: true do |f|%>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :food_tag_id, "食材" %><br />
        
        <%= f.collection_select(:food_id, Food.all, :id, :name, {:prompt => true}, {class: :food__form__text, id:"item-shipping-fee-status"}) %>
      </div>
      <div class="field">
        <%= f.label :num, "個数" %><br />
        <%= f.text_area :num , class: :date__form__text %>
      </div>
      <div class="actions">
        <%= f.submit "食材追加", class: :form__btn  %>
      </div>
    <%end%>
  </div>
</main>