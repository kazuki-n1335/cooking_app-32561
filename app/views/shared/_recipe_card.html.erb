<div class="recipe__list">
  <%= link_to image_tag(recipe.image, class: :card__img), recipe_path(recipe.id)%>
  <%= link_to recipe.title, recipe_path(recipe.id), class: :recipe__title%>
  <div class="recipe__row">
    <div class = "tag__list">
      <%recipe.recipe_tags.each do |recipe_tag|%>
        <%= link_to "#{recipe_tag.tag}", recipe_tag_path(recipe_tag.id), class: :recipe__tag%>
      <%end%>
    </div>
    <div>
      <div class = "like__list">
        <%= image_tag "star_on.png", class:"star__icon" %>
        <div class = "like__count"><%=recipe.likes.length%></div>
      </div>
      <%= link_to "by #{recipe.user.nickname}", user_path(recipe.user_id), class: :recipe__user %>
    </div>
  </div>
</div>