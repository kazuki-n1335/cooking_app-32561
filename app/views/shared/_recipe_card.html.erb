<div class="card">
  <%= link_to image_tag(recipe.image, class: :card__img), recipe_path(recipe.id)%>
  <div class="card__body">
    <%= link_to recipe.title, recipe_path(recipe.id), class: :card__title%>
    <p class="card__summary">
    </p>
    <%= link_to "by #{recipe.user.nickname}", user_path(recipe.user_id), class: :card__user %>
  </div>
</div>